    <!--
        Added the entity ExamUserTest.
    -->
    <changeSet id="20180219120442-1" author="jhipster">
        <createTable tableName="exam_user_test">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="duration" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="total_score" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="user_score" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="paper" type="clob">
                <constraints nullable="true" />
            </column>

            <column name="answer" type="clob">
                <constraints nullable="true" />
            </column>

            <column name="jhi_check" type="clob">
                <constraints nullable="true" />
            </column>

            <column name="testdate" type="timestamp">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="exam_user_test" columnName="testdate" columnDataType="datetime"/>
        
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
